<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".SupportActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/Support_Website"
        android:background="@drawable/bottomstroke_design_bg"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <ImageView

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/support_globe"/>

        <TextView

            android:paddingLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.konnekt.com.au"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/Support_Email"
        android:background="@drawable/bottomstroke_design_bg"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <ImageView

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/support_mail" />

        <TextView

            android:paddingLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="support_konnekt@konnekt.com.au"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/Support_Skype"
        android:background="@drawable/bottomstroke_design_bg"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <ImageView

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/support_skype" />

        <TextView

            android:paddingLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="skype.konnekt"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/Support_Number"
        android:background="@drawable/bottomstroke_design_bg"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <ImageView

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/support_phone" />

        <TextView

            android:paddingLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1-819007864"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>